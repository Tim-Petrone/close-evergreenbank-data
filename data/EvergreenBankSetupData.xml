<?xml version="1.0" encoding="UTF-8"?>

<entity-facade-xml type="seed">
    <!--Localizations-->
    <moqui.basic.LocalizedEntityField entityName="moqui.basic.StatusItem" fieldName="description" pkValue="OrderOpen" locale="en" localized="Open" />
    <moqui.basic.LocalizedEntityField entityName="moqui.basic.StatusItem" fieldName="description" pkValue="OrderRequested" locale="en" localized="Requested" />

    <moqui.basic.LocalizedEntityField entityName="moqui.basic.Enumeration" fieldName="description" pkValue="RessOwn" locale="en" localized="Own without debt" />
    <moqui.basic.LocalizedEntityField entityName="moqui.basic.Enumeration" fieldName="description" pkValue="RessPrivateTenant" locale="en" localized="Rent" />

    <!-- Overrides Natural Person Certification in moqui-close -->
    <moqui.basic.LocalizedEntityField entityName="moqui.basic.Enumeration" fieldName="description" pkValue="MkAgrNaturalPersonCertification" locale="en" localized="Authorized Signer Certification" />
    <moqui.basic.LocalizedEntityField entityName="moqui.basic.Enumeration" fieldName="description" pkValue="PsstTemplateAgrNaturalPersonCert" locale="en" localized="Template Authorized Signer Certification Agreement" />

    <!-- Service Job for Sending Loan Estimate -->
    <moqui.service.job.ServiceJob jobName="SendLoanEstimateNotice" description="Send Loan Estimate Notice Three Days After Requested Status" serviceName="close.EvergreenServices.check#ToGenerateLoanEstimate" cronExpression="0 0 7 ? * * *">
        <moqui.service.job.ServiceJobParameter parameterName="agreementTypeEnumId" parameterValue="MkAgrLoanEstimate"/>
    </moqui.service.job.ServiceJob>

    <!-- Additional cancel reasons -->
    <moqui.basic.Enumeration enumTypeId="OrderDecisionReason" enumId="OdrCancelApplicationIncomplete" enumCode="" description="Application incomplete" relatedEnumId="DtCancelled"/>
    <moqui.basic.Enumeration enumTypeId="OrderDecisionReason" enumId="OdrCancelApproveNotAccepted" enumCode="" description="Application approved but not accepted" relatedEnumId="DtCancelled"/>
    <moqui.basic.Enumeration enumTypeId="OrderDecisionReason" enumId="OdrCancelApplicationWithdrawn" enumCode="" description="Application withdrawn" relatedEnumId="DtCancelled"/>

    <moqui.basic.EnumGroupMember enumGroupEnumId="MkOrderDecisionReasonEnumGroup" enumId="OdrCancelApplicationIncomplete" />
    <moqui.basic.EnumGroupMember enumGroupEnumId="MkOrderDecisionReasonEnumGroup" enumId="OdrCancelApproveNotAccepted" />
    <moqui.basic.EnumGroupMember enumGroupEnumId="MkOrderDecisionReasonEnumGroup" enumId="OdrCancelApplicationWithdrawn" />
</entity-facade-xml>
